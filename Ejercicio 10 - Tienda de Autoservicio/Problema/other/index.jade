             select.form-control#ganancia_ciudad
              
             
          .col-md-4
            label Monto
            p S/. <span id="monto_ciudad"> 0.00 </span> 
         br

        .form-group
          br
          .col-md-8
             label Tienda
             select.form-control#ganancia_tienda
